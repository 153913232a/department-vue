// 背景图片
bg-image($url)
  background-image: url($url)
  background-repeat: no-repeat
  background-size: 100% 100%
flex-pos($ps1, $ps2)
  display: flex
  align-items: $ps1
  justify-content: $ps2
// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

